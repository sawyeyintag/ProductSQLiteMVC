@model ProductMVC.Models.NorthRegionViewModel
@{
    ViewData["Title"] = "Add Product";
}
<h1>Create</h1>
<h4>@ViewData["Title"]</h4>
<form enctype="multipart/form-data" method="post" asp-controller="northRegion" asp-action="Create" class="w-75 mx-auto">
    <div class="mb-3">
        <label for="Name" class="form-label">Please enter Name:</label>
        <input type="t ext" class="form-control" id="Name" asp-for="Name" />
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Please enter Description:</label>
        <input type="text" class="form-control" id="Description" asp-for="Description" />
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Please enter Price:</label>
        <input type="text" class="form-control" id="Price" asp-for="Price" />
    </div>
    <div class="mb-3">
        <label for="ExpiredDate" class="form-label">Expired Date:</label>
        <input type="date" class="form-control" id="ExpiredDate" asp-for="ExpiredDate" />
    </div>
    <div class="mp-3">
        <label for="Image" class="form-label">Please enter Image:</label>
        <input type="file" class="form-control" name="ImageFile" id="ImageFilename" />
    </div>
    <div class="mb-3">
        <label for="Source" class="form-label">Please enter Source:</label>
        <div class="col-sm-9">
            <select class="form-select" asp-for="Source">
                <option value="Domestic">Domestic</option>
                <option value="Overseas">Overseas</option>
                <option value="Unknown">Unknown</option>
            </select>
        </div>
    </div>
    <div class="mb-3">
        <label>&nbsp;&nbsp;&nbsp;</label>
        <div class="col-sm-9">
            <input type="submit" class="btn btn-info mx-auto d-inline" value="Save" />
            <input type="button" class="btn btn-primary mx-auto d-inline" value="Cancel" action="action"
                onclick="window.location.href='../'" />
        </div>
    </div>
</form>
