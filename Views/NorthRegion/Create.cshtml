@model ProductSQLiteMVC.Models.ProductViewModel
@{
    ViewData["Title"] = "Add Product";
}
<h1>Create</h1>
<h4>@ViewData["Title"]</h4>
<form method="post" class="w-75 mx-auto">
    <div class="mb-3">
        <label for="Name" class="form-label">Please enter Name:</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" />
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Please enter Description:</label>
        <input type="text" class="form-control" id="Description" asp-for="Description" />
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Please enter Price:</label>
        <input type="number" class="form-control" id="Price" asp-for="Price" />
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-info mx-auto d-inline" value="Add" />
        <input type="button" class="btn btn-primary mx-auto d-inline" action="action"
            onclick="window.location.href='../Friend'" value="Cancel" />
    </div>
</form>